<%- include('./partials/head') %>
<%- include('./partials/header') %>
<main class="bg-light single-page">
  <section class="banner-img-sm bg-tertiary-dark" style="--card-img: url('https://st4.depositphotos.com/2894069/23243/v/1600/depositphotos_232432114-stock-illustration-happy-christmas-day-celebrating-together.jpg'); --this-position: center -150px;">
    <h1 class="light"><%= titulo %></h1>
    <p class="primary flex-item-full-row"><%= subtitulo %> | <%= usuario.nome %> <%= usuario.sobrenome %></p>
  </section>
  <section id="usuarios" class="bg-tertiary-light">
    <h2 class="tertiary flex-item-full-row"><%= usuario.nome %><%= usuario.apelido && ' | a.k.a. ' + usuario.apelido %></h2>
    <p class="tertiary-dark text-center text-bolder flex-item-full-row"><%= subtitulo %></p>
    <%- include('./partials/userDetails') %>
  </section>
</main>
<%- include('./partials/footer') %>